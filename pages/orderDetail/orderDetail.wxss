/* pages/orderDetail/orderDetail.wxss */
page{
  background: #eee;
  box-sizing: border-box;
  padding: 30rpx
}
.detail{
  width: 100%;
  height: 350rpx;
  background: rgba(255,215,0,.3);
  border-radius: 20rpx;
  margin:  30rpx auto;
  box-sizing: border-box;
  padding: 20rpx;
}
.act_title{
  width: 90%;
  height: 60rpx;
  margin: 20rpx auto;
  border: 1px dashed #9900CC;
  line-height: 60rpx;
  text-align: center;
  color: #FF3300;
  font-weight: bold
}
.act_joinnum,.cat_time{
  text-align: center;
  font-size: 28rpx;
  margin: 30rpx auto;
  color: #fff
}
.order{
  width: 100%;
  /* height: 400rpx; */
  margin: 0 auto;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx
}
.order_item{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.payWrap{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx
}
.pay{
  width: 150rpx;
  height: 60rpx;
  background: #CC3300;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx
}