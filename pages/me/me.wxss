/* pages/me/me.wxss */
page{
  background: #eee;
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.userInfo{
  width: 100%;
  height: 300rpx;
  background: linear-gradient(to right,#EF9235,#EB6029);
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20rpx
}
button::after {
  border: none;
}
button {
  background-color: transparent;
  border-radius:0;
  color: #fff;
  font-size: 28rpx;
}

.avatarUrl{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff
}
.avatarUrl>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx
}
.order{
  width: 100%;
  height: 230rpx;
  background: #fff
}
.order_title{
  font-size: 28rpx;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  padding-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx
}
.order_list{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.order_item{
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  width: 25%
}
.order_item>image{
  width: 60rpx;
  height: 60rpx
}
.myInfo{
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx
}
.myInfo_item{ 
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee
}
.item_l{
  display: flex;
  align-items: center
}

.icon {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666;
  position: fixed;
  bottom: 20rpx
}

.icon_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
