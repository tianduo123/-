  height: 80rpx;
  background: #CC3300;
  text-align: center;
  line-height: 80rpx;
  border-radius: 0;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around
}
button::after {
  border: none;
}

.like{
  width: 50%;
  height: 80rpx;
  background: #CC3300;
  text-align: center;
  line-height: 80rpx;
  border-radius: 0;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
  border-right: 1px solid #fff
}
.like>view{
  display: flex;
  align-items: center
}
.pay>view{
  display: flex;
  align-items: center
}
.bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  left: 0;
  bottom: 0;
  color: #fff;
  font-size: 28rpx
  /* font-weight: bold */
}

.huaxu{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 30rpx
}
.video{
  width: 80%;
  height: 400rpx;
  border-radius: 20rpx
}


/* 弹幕效果 */
.danmu{
  width: 300rpx;
  background: rgba(0,0,0,.3);
  position: absolute;
  left: -100%;
  color: #fff;
  /* text-align: center; */
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  /* line-height: 50rpx; */
  border-radius: 20rpx;
  /* 动画效果 */
  animation: first 5s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

@keyframes first{
   0%{left:100%;}
   100%{left: -100%}
}
.danmu>view{
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
