/* pages/myMoney/myMoney.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 100rpx
}
.title{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff
}
.line{
  width: 2rpx;
  height: 60rpx;
  background: #666
}
.item{
  width: 49%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #666

}
.item2{
  width: 49%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #CC3300;
  color: #CC3300
}
.getRecord{
  /* height: 400rpx; */
  box-sizing: border-box;
  padding: 20rpx
}
.record_item{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #666;
  display: flex
}
.userInfo{
  width: 40%;
  display: flex;
  align-items: center;
}
.userInfo>text{
  width: 70%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.price{
  width: 20%;
  text-align: center;
  line-height: 100rpx;
  color: #FFCC00
}
.time{
  width: 40%;
  text-align: right;
  line-height: 100rpx;
}
.empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx auto;
  font-size: 28rpx
  /* justify-content: space-around */
}